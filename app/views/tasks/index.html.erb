<h1>Hallo, here is your Task Manager📝 </h1>

<ol>
  <% @tasks.each do |task| %>
    <div class="row">
    <input class="form-check-input" type="checkbox" <%= "checked" if task.completed %> id="flexCheckDefault">
    <label class="form-check-label" for="flexCheckDefault"><%= link_to task.title, task_path(task.id) %></label>
    </div>
  <% end %>
  <%= link_to "➕Add a new Task", new_task_path %>
</ol>
